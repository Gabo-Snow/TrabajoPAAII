@model IEnumerable<TrabajoPAAII.Models.AsignaturaCarreraModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear Nuevo", "Crear")
    </p>
    <table class="table" border="1">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AsignaturaModel.IdAsignatura)</th>
            <th>@Html.DisplayNameFor(model => model.AsignaturaModel.Asignatura1)</th>
            <th>@Html.DisplayNameFor(model => model.AsignaturaModel.Semestre)</th>
            <th>@Html.DisplayNameFor(model => model.AsignaturaModel.IdCarrera)</th>
            <th>@Html.DisplayNameFor(model => model.CarreraModel.Id)</th>
            <th>@Html.DisplayNameFor(model => model.CarreraModel.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.CarreraModel.NombreCarrera)</th>
            <th>@Html.DisplayNameFor(model => model.CarreraModel.AreaNegocio)</th>
            <th>@Html.DisplayNameFor(model => model.CarreraModel.Estado)</th>

        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AsignaturaModel.IdAsignatura)</td>
                <td>@Html.DisplayFor(modelItem => item.AsignaturaModel.Asignatura1)</td>
                <td>@Html.DisplayFor(modelItem => item.AsignaturaModel.Semestre)</td>
                <td>@Html.DisplayFor(modelItem => item.AsignaturaModel.IdCarrera)</td>
                <td>@Html.DisplayFor(modelItem => item.CarreraModel.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.CarreraModel.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.CarreraModel.NombreCarrera)</td>
                <td>@Html.DisplayFor(modelItem => item.CarreraModel.AreaNegocio)</td>
                <td>@Html.DisplayFor(modelItem => item.CarreraModel.Estado)</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.AsignaturaModel.IdAsignatura }) |
                    @Html.ActionLink("Detalle", "Detalle", new { id = item.AsignaturaModel.IdAsignatura }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.AsignaturaModel.IdAsignatura })
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Volver al Menú", "../Admin/Inicio")
    </div>



</body>
</html>
